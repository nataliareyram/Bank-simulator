{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build Project",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++17",
          "main.cpp",
          "Bank.cpp",
          "BankAccount.cpp",
          "Card.cpp",
          "Customer.cpp",
          "InvestmentAccount.cpp",
          "-o",
          "BankSimulator.exe"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^(.+):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      }
    ]
  }
  